@model IEnumerable<HotelSearch.Domain.Entities.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1> USER LIST</h1>

<table class="mt-4 table table-hover table-bordered table-sm">
    <thead>
        <tr>
            <td>Kullanıcı Adı</td>
            <td>Şifre</td>
            <td>Email</td>
            <td>Kayıt Tarihi</td>
            <td>Durum</td>

            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Password</td>
                <td>@user.Email</td>
                <td>@user.Registration</td>
                <td>@user.Situation</td>
                <td> <getAccountCount application-user-id="@user.Id"></getAccountCount></td>
                <td>
                <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Düzenle</a>
                </td>
                <td>
                    <a asp-controller="User" asp-action="Delete" onclick="return confirm('Silmek İstediğinize Emin misiniz ?')";asp-route-id="@user.Id" >Sil</a>
                </td>

            </tr>
         
        }
      
    <a asp-controller="User" asp-action="Create">Yeni Kayıt</a>
    </tbody>
</table>
